<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DefaultAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#000000</item>
    </style>

    <style name="ToolbarWhiteControlsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
    <style name="DefaultTransparentActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="ToolbarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <!-- Cause issue in low resolution device-->
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <!--<item name="customTypeface">fonts/soho_gothic_pro_bold.otf</item>-->
    </style>

    <style name="ToolbarText.White">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ToolbarSubText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_tiny</item>
        <item name="android:paddingBottom">@dimen/padding_tiny</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_tiny</item>
        <item name="android:textColor">@color/txt_white</item>
        <item name="android:maxLines">1</item>
        <item name="android:minWidth">@dimen/toolbar_subtext_min_width</item>
        <!--<item name="customTypeface">fonts/soho_gothic_pro_bold.otf</item>-->
    </style>

    <style name="ToolbarSubText.IndigoBackground">
    </style>

    <style name="ToolbarSubText.DodgerBlueBackground">
    </style>

</resources>
